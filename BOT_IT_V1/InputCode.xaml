<Window x:Class="BOT_IT_V1.InputCode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BOT_IT_V1"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="BOT 88" Height="240" Width="300"
        ResizeMode="NoResize" Icon="/icon.ico">
    <Grid Margin="0,0,0,0">
        <Label Content="NHẬP MÃ PHẦN MỀM"
               Background="LightCyan"
               HorizontalAlignment="Center"
               Margin="0,0,0,0"
               VerticalAlignment="Top"
               Width="289"
               Grid.IsSharedSizeScope="True"
               HorizontalContentAlignment="Center" FontSize="20"/>
        <TextBox HorizontalAlignment="Center"
                 Name="txtCode"
                 Margin="0,42,0,0"
                 Padding="10"
                 TextWrapping="Wrap"
                 Text=""
                 VerticalAlignment="Top"
                 VerticalContentAlignment="Center"
                 Width="280"
                 FontSize="16" Height="47"
                 KeyDown="txtCode_KeyDown"/>
        <Label Content="Nhận mã phần mềm duy nhất tại:" HorizontalAlignment="Center" Margin="0,94,0,0" VerticalAlignment="Top" Width="280" FontSize="16"/>
        <Label Content="Hotline/Zalo: 0979 51 7777" HorizontalAlignment="Center" Margin="0,125,0,0" VerticalAlignment="Top" Width="280" FontSize="16"/>
        <Button x:Name="btnOk" Content="Chấp nhận" HorizontalAlignment="Center" Margin="0,156,0,0" VerticalAlignment="Top" Height="30" Width="80" Background="#FF29C100" Foreground="White" Click="btnOk_Click"/>
        <Button x:Name="btnCancel" Content="Hủy" HorizontalAlignment="Left" Margin="195,156,0,0" VerticalAlignment="Top" Height="30" Width="80" Background="#FFFF3838" Foreground="White" Click="btnCancel_Click"/>
    </Grid>
</Window>
